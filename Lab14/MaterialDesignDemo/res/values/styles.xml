<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->


        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">#3f51b5</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">#00838f</item>

        <!--
         colorAccent is used as the default value for colorControlActivated,
         which is used to tint widgets
        -->
        <item name="colorAccent">#3f51b5</item>

        <!--
         You can also set colorControlNormal, colorControlActivated
         colorControlHighlight, and colorSwitchThumbNormal.
        -->
        <item name="colorControlNormal">#9e9e9e</item>
        <item name="colorControlActivated">#259b24</item>
        <item name="colorControlHighlight">#9c27b0</item>
        <item name="colorSwitchThumbNormal">#9e9e9e</item>
    </style>

    <style name="DrawerStyle" parent="Theme.AppCompat.NoActionBar">

        <!-- Setup drawer toggle style -->
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">

        <!-- Enables spinning effect on drawer state change -->
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

</resources>